<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RickMortyApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RickMortyApp.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/Theme.RickMortyApp.Toolbar.TitleTextAppearance</item>
    </style>

    <style name="Theme.RickMortyApp.Toolbar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>